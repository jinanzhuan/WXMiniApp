/* pages/scrollview/scrollview.wxss */
.container {
    width: 100%;
}
.outer{
    display: flex;
    flex-direction:column;
    height: 100%;
    width: 100%;
}

.top{
    width: 100%;
    height: 80%;
    border: 1px solid green;
    display: flex;
    flex-direction: row;
    background-color: green;
}

.scroll {
    width: 80%;
    white-space: nowrap;
    background-color: red;
}

.block{
    height: 80rpx;
    width: 100%;
    background:darkgray;
    border:1px solid rebeccapurple;
    margin-top:2px;
    display: inline-block;
}