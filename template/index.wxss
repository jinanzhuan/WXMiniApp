.area_container {
  width: 100%;
  position: fixed;
  left: 0;
  bottom: 0;
  display: flex;
  flex-direction: column;
  background-color: white;
}

.picker-view {
  flex: 1;
}

.addr-item {
  line-height: 50px;
  text-align: center;
}

.show {
  text-align: center;
  margin: 20px;
  height: 50px;
}

.choose {
  margin: 20px 0;
}

.button_select {
  width: 100%;
  height: 100rpx;
  line-height: 100rpx;
}

.line {
  width: 100%;
  height: 2rpx;
  background-color: #f4f4f4;
}

.cancel{
  width: 200rpx;
  text-align: center;
  float: left;
  display: inline-block;
  color: darkgray;
}

.ok {
  width: 200rpx;
  text-align: center;
  display: inline-block;
  float: right;
  color: lawngreen;
}